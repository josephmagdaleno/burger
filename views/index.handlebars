<div class="container" class="center">
	<div class="jumbotron">
		<img src="https://i.imgur.com/mI8EmoG.jpeg" width="400x400" height="400x400" class="center">
		<h1 class="center">Eat Burgers!!! </h1>
	</div>
	

	<div class="container">
    <div class="col-sm-12 text-center">
        <h4 "text-center">What burger would you like to order?</h4>
        <form class="button-size" action="/api/burgers" method="POST">
            <input type="text" class="text-center" id="insertBurger" name="burger_name" placeholder="Insert Burger Name Here..."></input>
            <span class="input-group-btn">
                <button type="submit" class="insertBurgerBtn btn btn-primary">ENTER</button>
            </span>
        </form>
    </div>
    <div class="row">

        {{!-- Uneaten Burgers --}}
        <div class="col-sm-6">
            <h4 class="text-center columnHeading">Burgers to Eat:</h4>
            {{#each burgers}} {{#unless this.devoured}}
            <form action="/api/update/{{this.id}}?_method=PUT" method="POST">
                <div class="input-group">
                    <input type="hidden" name="devoured" value="true">
                    <li class="form-control uneaten">{{this.burger_name}}</li>
                    <span class="input-group-btn">
                        <button class="eatBurger btn btn-info" data-id="{{id}}" data-eat="{{devoured}}" type="submit">Devour It!</button>
                    </span>
                </div>
            </form>
            {{/unless}} {{/each}}
        </div>

        {{!-- Eaten burgers --}}
        <div class="col-sm-6">
            <h4 class="text-center columnHeading">Eaten Burgers:</h4>
            {{#each burgers}} {{#if this.devoured}}
            <div>
                <li class="form-control devoured">{{this.burger_name}}</li>
            </div>
            </form>
            {{/if}} {{/each}}
        </div>
    </div>
    <br>
</div>